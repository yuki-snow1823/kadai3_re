<%= render '/users/show', user: @user,book: @book %>
<!-- 共通部分 -->


<h2>Books</h2>
<div class="col-xs-9">
  <table class="table table-hover table-inverse">

    <thead>
      <th> </th>
      <th>Title</th>
      <th>Opinion</th>
    </thead>

    <% @books.each do |f| %>
    <tr>
      <td><%= link_to attachment_image_tag(f.user, :profile_image, :fill, size:"40*40", 
    format: 'jpeg', fallback: "no_image.jpg"),user_path(f.user.id) %></td>

      <td><%= link_to f.title, book_path(f.id) %></td>
      <td><%= f.body %></td>
    </tr>
    <% end %>
  </table>
</div>
