<% if flash[:success] %>
<div class="flash">
  <%= flash[:success] %>
</div>
<% end %>

<%= render '/users/show', user: @user,book: @booknew %>

<div class="col-xs-9">
  <h2>Book detail</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </thead>
    <tr>
      <td>
        <%= link_to attachment_image_tag(@user, :profile_image, :fill, size:'100x100' , format: 'jpg', fallback: "no_image.jpg"),user_path(@user.id) %><br>
        <%= link_to @user.name, user_path(@user.id) %></td>


      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>

      <% if @user.id == current_user.id %>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "Destroy", book_path(@book.id) , method: :delete, "data-confirm" => "Are you sure?" %></td>
      <% end %>

    </tr>
  </table>
</div>

<% @book.comments.each do |comment| %>
  <%= comment.user.name %>
  <%= comment.created_at.strftime('%Y/%m/%d') %>
  <%= comment.comment %>
<% end %>

<a href="#comments"><%= @book.comments.count %>件コメント</a>

<%= form_for [@book, @comment] do |f| %>

  <%= f.text_area :comment %>
  <%= f.submit "送信する" %>
<% end %>
